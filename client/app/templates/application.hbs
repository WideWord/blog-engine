<header>
    <div style="background-color: #ddd; width: 100%; height: 70px;">
        <div class="col-md-offset-3 col-md-6 col-xs-12" style="margin-top:20px;">
            <span>

            </span>
            <span class="btn-group" role="group">
                {{link-to 'Главная' 'posts.index' class="btn btn-default" tagName="button"}}
                {{#if session.isAuthenticated}}
                    {{link-to 'Написать пост' 'posts.new' class="btn btn-default" tagName="button"}}
                    {{link-to 'Выйти' 'logout' class="btn btn-default" tagName="button"}}
                {{else}}
                    {{link-to 'Вход' 'login' class="btn btn-default" tagName="button"}}
                    {{link-to 'Регистрация' 'signup' class="btn btn-default" tagName="button"}}
                {{/if}}
            </span>
            {{#if session.user.id}}
                <div class="pull-right well well-sm">
                    {{session.user.id}}
                </div>
            {{/if}}
        </div>
    </div>
</header>

