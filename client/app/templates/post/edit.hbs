<form {{action 'update' on='submit'}}>
    <div class="form-group">
        {{input value=title type="text" class="form-control" id="title"}}
    </div>
    <div class="form-group">
        {{textarea value=body class="form-control" rows="15" id="body"}}
    </div>
    <button type='submit' class="btn btn-primary pull-right">Сохранить</button>
</form>
