{{#each post in controller}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>{{post.title}}<small> - {{post.author.id}}</small></h3>
        </div>
        <div class="panel-body">
            {{post.body}}
        </div>
        <div class="panel-footer">
            {{#link-to 'post' post class="btn btn-primary"}}
                Комментарии <span class="badge">{{post.comments.length}}</span>
            {{/link-to}}
        </div>
    </div>
{{/each}}