<form {{action 'create' on='submit'}}>
    <div class="form-group">
        {{input value=title type="text" class="form-control" id="title"}}
        {{#each error in errors.title}}
            <div class="text-danger" style="margin-top: 10px;">
                {{error.message}}
            </div>
        {{/each}}
    </div>
    <div class="form-group">
        {{textarea value=body class="form-control" rows="15" id="body"}}
        {{#each error in errors.body}}
            <div class="text-danger" style="margin-top: 10px;">
                {{error.message}}
            </div>
        {{/each}}
    </div>
    <button type='submit' class="btn btn-primary pull-right">Написать пост</button>
</form>
